{
  "manifest_version": 3,
  "name": "Click Logger Extension",
  "version": "1.0",
  "description": "Logs click events on any website.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
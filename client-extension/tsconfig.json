{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",     
    "esModuleInterop": true,       
    "skipLibCheck": true,          
    "strict": true,
    "paths": {
      "@multi-client-sync/shared": ["../shared/src"]
    }         
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/manifest.json"
  ]
}